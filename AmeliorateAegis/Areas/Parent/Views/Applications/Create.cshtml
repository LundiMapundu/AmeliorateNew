@model AmeliorateAegis.Models.Applications.Application

@{
    ViewData["Title"] = "Applications";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CreationTime" class="control-label"></label>
                            <input asp-for="CreationTime" class="form-control" />
                            <span asp-validation-for="CreationTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ModifiedTime" class="control-label"></label>
                            <input asp-for="ModifiedTime" class="form-control" />
                            <span asp-validation-for="ModifiedTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ParentId" class="control-label"></label>
                            <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PupilId" class="control-label"></label>
                            <select asp-for="PupilId" class="form-control" asp-items="ViewBag.PupilId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CentreId" class="control-label"></label>
                            <select asp-for="CentreId" class="form-control" asp-items="ViewBag.CentreId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </div>
</div>